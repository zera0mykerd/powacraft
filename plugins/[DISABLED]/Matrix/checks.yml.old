    break_block:
      enable: true
      vl_weight: 1
    # It can detect player attacking other entities through walls
    attack:
      enable: true
      vl_weight: 1
    # It can detect player interacting blocks too far away
    block_reach:
      enable: true
      vl_weight: 1

  # Violation Thresholds
  # number_of_violations: '<command>'
  commands:
    10: 'matrix notify %player% Sta interagendo in modo illegale con le Entita/Blocchi (Interact)'
    15: 'matrix kick %player% Interazione illegale con Entita/Blocchi'

